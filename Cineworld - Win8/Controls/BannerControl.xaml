<UserControl
    x:Class="Cineworld.BannerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Cineworld"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <Grid x:Name="TitlePanel" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Image Source="/Assets/CineworldStore.png" Stretch="None" HorizontalAlignment="Left" VerticalAlignment="Center" />
        <TextBlock x:Name="tbTitle" Margin="24, 0" Style="{StaticResource SubheaderTextStyle}" TextWrapping="NoWrap" HorizontalAlignment="Stretch" Grid.Column="1" VerticalAlignment="Center" FontFamily="Global User Interface"/>
    </Grid>
</UserControl>
